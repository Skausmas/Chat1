<Page x:Class="Chat.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chat"
      mc:Ignorable="d" 
      d:DesignHeight="402" d:DesignWidth="466"
      Title="Auth" Name="auth" ShowsNavigationUI="False">

    <Grid Background="White" Name="gridAuth">
        <TextBox Name ="login" HorizontalAlignment="Left" Height="52" Margin="83,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="286"/>
        <TextBox Name ="password" HorizontalAlignment="Left" Height="52" Margin="83,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="286"/>
        <Button Content="Вход" HorizontalAlignment="Left" Height="31" Margin="83,279,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click" />
        <Button Content="Регистрация" HorizontalAlignment="Left" Height="31" Margin="245,279,0,0" VerticalAlignment="Top" Width="140" />
        <Label Content="Введите логин:" HorizontalAlignment="Left" Height="28" Margin="83,47,0,0" VerticalAlignment="Top" Width="123"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Left" Height="28" Margin="83,160,0,0" VerticalAlignment="Top" Width="123"/>

    </Grid>
</Page>
